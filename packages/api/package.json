{
  "name": "@knighthacks/api",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "deploy": "wrangler deploy --minify",
    "dev": "wrangler dev --port 8080 && tsc --watch",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "clean": "rm -rf .turbo .wrangler node_modules"
  },
  "dependencies": {
    "@clerk/backend": "^1.2.4",
    "@hono/clerk-auth": "^2.0.0",
    "@hono/trpc-server": "*",
    "@knighthacks/db": "workspace:*",
    "@knighthacks/validators": "workspace:*",
    "@trpc/server": "11.0.0-rc.351",
    "cors": "^2.8.5",
    "hono": "^4.4.7",
    "superjson": "1.9.1",
    "svix": "^1.15.0",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "@knighthacks/eslint-config": "workspace:*",
    "@knighthacks/prettier-config": "workspace:*",
    "@knighthacks/tsconfig": "workspace:*",
    "eslint": "^9.4.0",
    "prettier": "^3.3.1",
    "tsup": "^8.0.1",
    "typescript": "^5.4.5",
    "wrangler": "^3.62.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@knighthacks/eslint-config/base"
    ]
  },
  "prettier": "@knighthacks/prettier-config"
}
