{
  "name": "@knighthacks/db",
  "version": "0.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "scripts": {
    "with-env": "dotenv -e ../../.env --",
    "push": "pnpm with-env drizzle-kit push:sqlite",
    "studio": "pnpm with-env drizzle-kit studio",
    "generate": "pnpm with-env drizzle-kit generate:sqlite",
    "lint": "eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo node_modules"
  },
  "license": "MIT",
  "dependencies": {
    "drizzle-kit": "^0.20.6",
    "@libsql/client": "0.4.0-pre.5",
    "drizzle-orm": "^0.29.1",
    "zod": "^3.22.4",
    "drizzle-zod": "^0.5.1"
  },
  "devDependencies": {
    "@knighthacks/eslint-config": "workspace:*",
    "@knighthacks/prettier-config": "workspace:*",
    "@knighthacks/tsconfig": "workspace:*",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "dotenv-cli": "latest"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@knighthacks/eslint-config/base"
    ]
  },
  "prettier": "@knighthacks/prettier-config"
