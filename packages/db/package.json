  },
  "license": "MIT",
  "devDependencies": {
    "drizzle-kit": "^0.20.6",
    "@knighthacks/eslint-config": "workspace:*",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2"
  },
  "dependencies": {
    "@libsql/client": "0.4.0-pre.5",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1"
  }
}
