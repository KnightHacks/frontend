{
  "name": "knighthacks",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.2.0",
  "scripts": {
    "build": "turbo run build --no-daemon",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:studio": "turbo -F @knighthacks/db studio --no-daemon",
    "db:push": "turbo -F @knighthacks/db push --no-daemon",
    "dev": " turbo watch dev  --no-daemon",
    "format": "turbo run format --continue -- --cache --cache-location node_modules/.cache/.prettiercache --no-daemon",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache  --no-daemon",
    "lint": "turbo run lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache --no-daemon",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck --no-daemon",
    "ui-add": "turbo run ui-add --no-daemon"
  },
  "devDependencies": {
    "@knighthacks/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.3",
    "prettier": "^3.3.1",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5"
  },
  "prettier": "@knighthacks/prettier-config"
}
