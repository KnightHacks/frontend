{
  "name": "@knighthacks/db",
  "version": "0.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "scripts": {
    "db:push": "drizzle-kit push:sqlite",
    "db:preview": "drizzle-kit studio --port 5555",
    "db:generate": "drizzle-kit generate:sqlite --out ./drizzle --breakpoints --schema=./schemas/schema.ts",
    "lint": "eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "devDependencies": {
    "@knighthacks/eslint-config": "workspace:*",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@knighthacks/eslint-config": "workspace:*",
    "@knighthacks/prettier-config": "workspace:*",
    "@knighthacks/tsconfig": "workspace:*",
    "@libsql/client": "0.4.0-pre.5",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@knighthacks/eslint-config/base"
    ]
  },
  "prettier": "@knighthacks/prettier-config"
}
